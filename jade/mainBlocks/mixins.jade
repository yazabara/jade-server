mixin rowFeaturetteLeft(image, headerInfo, paragpaphs, id)
    hr.featurette-divider(id="#{id}")
    .row.featurette
        .col-md-7
            h2.featurette-heading #{headerInfo.header}
                span.text-muted #{headerInfo.span}
            p.lead
                | #{paragpaphs}
        .col-md-5
            img.featurette-image.img-responsive(data-src="holder.js/500x500/auto",alt="500x500",src="#{image}")

