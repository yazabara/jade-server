#home-carousel.carousel.slide(data-ride="carousel")
    //include indicators
    .carousel-inner
        .item.active
            img(src="images/cats/5.jpg")
        .item
            img(src="images/cats/8.jpg")
        .item
            img(src="images/cats/7.jpg")
        .item
            img(src="images/cats/8.jpg")

    a.left.carousel-control(href="#home-carousel",data-slide="prev")
        span.glyphicon.glyphicon-chevron-left
    a.right.carousel-control(href="#home-carousel",data-slide="next")
        span.glyphicon.glyphicon-chevron-right